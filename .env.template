# Azure SQL Database Configuration
AZURE_SQL_SERVER=your-server.database.windows.net
AZURE_SQL_DATABASE=your-database-name
AZURE_SQL_USERNAME=your-username
AZURE_SQL_PASSWORD=your-password

# Alternative: Full connection string
# AZURE_SQL_CONNECTION_STRING=mssql+pymssql://username:password@server.database.windows.net/database

# OpenAI Configuration (for NLP processing)
OPENAI_API_KEY=sk-your-openai-api-key

# Azure Storage (optional - for ADLS2)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# API Configuration (if using FastAPI)
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=["http://localhost:3000", "https://your-app.vercel.app"]

# Environment
ENVIRONMENT=development
DEBUG=True