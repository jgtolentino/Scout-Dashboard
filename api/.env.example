# TBWA HRIS Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here
DATABASE_URL=postgresql://user:pass@localhost:5432/tbwa_hris

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Pulser MCP Configuration
PULSER_MCP_URL=https://api.pulser.dev/mcp
PULSER_MCP_TOKEN=your_pulser_token_here
PULSER_WEBHOOK_SECRET=your_webhook_secret_here

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-frontend.vercel.app

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# Logging
LOG_LEVEL=info

# Metrics
METRICS_ENABLED=true

# Additional Services (Optional)
REDIS_URL=redis://localhost:6379
SENTRY_DSN=https://your-sentry-dsn
NEWRELIC_LICENSE_KEY=your_newrelic_key

# File Upload (if using local storage instead of Supabase)
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@tbwa.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@tbwa.com

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_for_external_services

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_DOCUMENT_INDEXING=true
ENABLE_WORKFLOW_EXECUTION=true

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
EMBEDDING_CACHE_SIZE=1000