{
  "testSuiteName": "HRIS Expense Mobile App UAT",
  "version": "1.0.0",
  "environment": "production",
  "testCategories": [
    {
      "category": "Receipt OCR Processing",
      "priority": "high",
      "tests": [
        {
          "id": "OCR-001",
          "scenario": "Clear Receipt Photo Capture",
          "userRole": "Employee",
          "preconditions": [
            "User is logged in",
            "Camera permissions granted"
          ],
          "steps": [
            "Navigate to New Expense",
            "Tap 'Take Photo'",
            "Capture clear receipt image",
            "Wait for OCR processing"
          ],
          "expectedResults": [
            "OCR extracts merchant name correctly",
            "Amount is accurately captured",
            "Date is recognized",
            "Currency is detected",
            "Confidence score >= 95%"
          ],
          "passsCriteria": "All fields extracted with 95% accuracy"
        },
        {
          "id": "OCR-002",
          "scenario": "Blurry/Poor Quality Receipt",
          "userRole": "Employee",
          "steps": [
            "Upload blurry receipt image",
            "Review OCR results"
          ],
          "expectedResults": [
            "System attempts enhancement",
            "User prompted to verify fields",
            "Manual entry option available"
          ],
          "passsCriteria": "Graceful degradation with manual fallback"
        }
      ]
    },
    {
      "category": "AI Categorization",
      "priority": "high",
      "tests": [
        {
          "id": "AI-001",
          "scenario": "Restaurant Receipt Auto-Category",
          "userRole": "Employee",
          "testData": {
            "merchantName": "The Olive Garden",
            "amount": 85.50
          },
          "expectedResults": [
            "Category auto-selected as 'Meals'",
            "Suggestion confidence displayed"
          ],
          "passsCriteria": "â‰¥90% correct categorization"
        },
        {
          "id": "AI-002",
          "scenario": "Hotel Receipt Multi-Category",
          "userRole": "Employee",
          "testData": {
            "merchantName": "Marriott Hotel",
            "lineItems": ["Room charge", "Restaurant", "Parking"]
          },
          "expectedResults": [
            "System suggests splitting expense",
            "Multiple categories offered"
          ],
          "passsCriteria": "Correct multi-category detection"
        }
      ]
    },
    {
      "category": "Expense Submission Flow",
      "priority": "high",
      "tests": [
        {
          "id": "SUB-001",
          "scenario": "Complete Expense Submission",
          "userRole": "Employee",
          "steps": [
            "Fill all required fields",
            "Attach receipt",
            "Add to business trip",
            "Submit expense"
          ],
          "expectedResults": [
            "Status changes to 'Pending Approval'",
            "Manager receives notification",
            "Confirmation displayed",
            "Expense appears in history"
          ],
          "passsCriteria": "End-to-end submission successful"
        },
        {
          "id": "SUB-002",
          "scenario": "Draft Save and Resume",
          "userRole": "Employee",
          "steps": [
            "Start expense entry",
            "Save as draft",
            "Close app",
            "Reopen and resume"
          ],
          "expectedResults": [
            "Draft preserved with all data",
            "Can continue from saved state"
          ],
          "passsCriteria": "Draft persistence works correctly"
        }
      ]
    },
    {
      "category": "Offline Functionality",
      "priority": "high",
      "tests": [
        {
          "id": "OFF-001",
          "scenario": "Offline Expense Creation",
          "userRole": "Employee",
          "preconditions": ["Device in airplane mode"],
          "steps": [
            "Create new expense",
            "Fill details",
            "Take receipt photo",
            "Submit"
          ],
          "expectedResults": [
            "Expense saved to offline queue",
            "User sees offline indicator",
            "Queue badge shows count"
          ],
          "passsCriteria": "Expense queued successfully"
        },
        {
          "id": "OFF-002",
          "scenario": "Auto-sync When Online",
          "userRole": "Employee",
          "steps": [
            "Create offline expenses",
            "Restore connectivity",
            "Wait for auto-sync"
          ],
          "expectedResults": [
            "Queue processes automatically",
            "Sync progress shown",
            "Success/failure notifications",
            "Queue cleared on success"
          ],
          "passsCriteria": "All queued items sync successfully"
        }
      ]
    },
    {
      "category": "Manager Approval Flow",
      "priority": "high",
      "tests": [
        {
          "id": "APR-001",
          "scenario": "Manager Approves Expense",
          "userRole": "Manager",
          "steps": [
            "Receive approval notification",
            "Review expense details",
            "View attached receipt",
            "Add comment",
            "Approve"
          ],
          "expectedResults": [
            "Status changes to 'Approved'",
            "Employee notified",
            "Audit log updated",
            "Finance notified"
          ],
          "passsCriteria": "Approval workflow completes"
        },
        {
          "id": "APR-002",
          "scenario": "Manager Rejects with Reason",
          "userRole": "Manager",
          "steps": [
            "Review expense",
            "Select reject",
            "Provide reason",
            "Submit rejection"
          ],
          "expectedResults": [
            "Status changes to 'Rejected'",
            "Employee sees rejection reason",
            "Can edit and resubmit"
          ],
          "passsCriteria": "Rejection flow works correctly"
        }
      ]
    },
    {
      "category": "Policy Violations",
      "priority": "medium",
      "tests": [
        {
          "id": "POL-001",
          "scenario": "Meal Limit Exceeded",
          "userRole": "Employee",
          "testData": {
            "category": "Meals",
            "amount": 500.00
          },
          "expectedResults": [
            "Warning displayed",
            "Policy limit shown ($150)",
            "Confirmation required",
            "Violation logged"
          ],
          "passsCriteria": "Violation detected and flagged"
        },
        {
          "id": "POL-002",
          "scenario": "Missing Receipt Warning",
          "userRole": "Employee",
          "testData": {
            "amount": 50.00,
            "hasReceipt": false
          },
          "expectedResults": [
            "Receipt required message",
            "Cannot submit without receipt",
            "Upload prompt shown"
          ],
          "passsCriteria": "Receipt requirement enforced"
        }
      ]
    },
    {
      "category": "ServiceNow Integration",
      "priority": "medium",
      "tests": [
        {
          "id": "SN-001",
          "scenario": "Auto-ticket for High Value",
          "userRole": "System",
          "testData": {
            "amount": 5000.00,
            "category": "Travel"
          },
          "expectedResults": [
            "ServiceNow ticket created",
            "Ticket ID stored",
            "Finance team notified",
            "Ticket link in expense"
          ],
          "passsCriteria": "Ticket created successfully"
        }
      ]
    },
    {
