# AI-BI-Genie Environment Configuration

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
RESOURCE_GROUP=ai-bi-genie-rg
LOCATION=eastus

# Database Configuration
SQL_SERVER=your-sql-server.database.windows.net
SQL_DATABASE=ai-bi-genie-db
SQL_USERNAME=sqladmin
SQL_PASSWORD=your-secure-password

# Redis Configuration
REDIS_CONNECTION_STRING=your-redis-connection

# Application Insights
APPLICATION_INSIGHTS_KEY=your-insights-key
APPLICATION_INSIGHTS_CONNECTION_STRING=your-insights-connection

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-at-least-32-characters
JWT_ISSUER=ai-bi-genie
JWT_AUDIENCE=ai-bi-genie-users

# External APIs
OPENAI_API_KEY=your-openai-key
AZURE_COGNITIVE_SERVICES_KEY=your-cognitive-key

# Storage Configuration
STORAGE_ACCOUNT=yourstorageaccount
STORAGE_CONNECTION_STRING=your-storage-connection

# Key Vault Configuration
KEY_VAULT_NAME=ai-bi-genie-kv
KEY_VAULT_URL=https://ai-bi-genie-kv.vault.azure.net/

# Container Registry
CONTAINER_REGISTRY=aibirgenie.azurecr.io

# Local Development Settings
FLASK_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Port Configuration
STREAMLIT_PORT=8501
ANGULAR_PORT=4200
API_GATEWAY_PORT=8080
ADVISOR_API_PORT=8081
METRICS_API_PORT=8082
RESOURCE_API_PORT=8083