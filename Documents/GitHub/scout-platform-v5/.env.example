# Environment
NODE_ENV=development
PORT=3000
HOST=localhost
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_VERSION=5.2.0

# Database - Supabase
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Security - REQUIRED: Generate secure random strings
JWT_SECRET=generate-32-char-random-string-here
REFRESH_TOKEN_SECRET=generate-32-char-random-string-here
SESSION_SECRET=generate-32-char-random-string-here
ENCRYPTION_KEY=generate-32-char-hex-string-here

# Redis (optional)
REDIS_URL=redis://localhost:6379

# External APIs (optional)
OPENAI_API_KEY=
SENDGRID_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Monitoring (optional)
NEXT_PUBLIC_SENTRY_DSN=optional_sentry_dsn_for_error_tracking
LOGTAIL_SOURCE_TOKEN=

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ADMIN_ORIGIN=https://admin.scout.tbwa.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# To generate secure random strings:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"