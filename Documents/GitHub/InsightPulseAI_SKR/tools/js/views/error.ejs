<\!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles/base.css">
  <style>
    .error-page {
      text-align: center;
      padding: 50px 20px;
    }
    .error-code {
      font-size: 80px;
      font-weight: 700;
      color: #e74c3c;
      margin-bottom: 0;
    }
    .error-message {
      font-size: 24px;
      margin-bottom: 30px;
    }
    .back-link {
      display: inline-block;
      padding: 10px 20px;
      background-color: #4a6cf7;
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }
    .error-details {
      margin-top: 40px;
      padding: 20px;
      background-color: #f8f8f8;
      border-radius: 4px;
      text-align: left;
    }
  </style>
</head>
<body>
  <header class="app-header">
    <div class="container header-content">
      <div class="logo">
        <a href="/">
          <span>InsightPulseAI</span>
        </a>
      </div>
      <nav class="main-nav">
        <ul>
          <li><a href="/">Home</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main class="app-content">
    <div class="container">
      <div class="error-page">
        <h1 class="error-code"><%= error.status || 500 %></h1>
        <p class="error-message"><%= message %></p>
        <a href="/" class="back-link">Go Back Home</a>
        
        <% if (error.stack && process.env.NODE_ENV === 'development') { %>
          <div class="error-details">
            <h3>Error Details</h3>
            <pre><%= error.stack %></pre>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <footer class="app-footer">
    <div class="container footer-content">
      <div class="copyright">
        &copy; <%= new Date().getFullYear() %> InsightPulseAI. All rights reserved.
      </div>
    </div>
  </footer>
</body>
</html>
EOF < /dev/null