{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-var": "error",
    "prefer-const": "warn",
    "semi": ["error", "always"],
    "quotes": ["warn", "single"],
    "indent": ["warn", 2],
    "no-trailing-spaces": "warn",
    "eol-last": "warn",
    "no-multiple-empty-lines": ["warn", { "max": 2 }],
    "comma-dangle": ["warn", "never"],
    "arrow-parens": ["warn", "always"],
    "arrow-spacing": "warn",
    "curly": ["warn", "all"]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "coverage/",
    "*.min.js"
  ]
}